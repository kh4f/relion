{
	"name": "relion",
	"version": "0.10.0",
	"description": "Release workflow helper for Node.js projects.",
	"author": "Kh4f <kh4f.dev@gmail.com>",
	"license": "MIT",
	"repository": "https://github.com/kh4f/relion",
	"bugs": "https://github.com/kh4f/relion/issues",
	"homepage": "https://github.com/kh4f/relion#readme",
	"keywords": [
		"relion",
		"release",
		"release-workflow",
		"release-helper",
		"semantic-release",
		"conventional-changelog",
		"standard-version",
		"commit-and-tag-version"
	],
	"files": [
		"dist",
		"package.json",
		"LICENSE",
		"README.md"
	],
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": "dist/cli.js",
	"scripts": {
		"build": "tsdown",
		"lint": "eslint",
		"test": "vitest run index",
		"build:watch": "tsdown --watch",
		"build:prod": "tsdown --production",
		"test:watch": "vitest index",
		"lint:fix": "eslint --fix",
		"release": "node dist/cli.js -blct",
		"release:github": "node dist/cli.js -l -p github -L",
		"prepare": "simple-git-hooks"
	},
	"dependencies": {
		"cleye": "^1.3.4",
		"handlebars": "^4.7.8",
		"semver": "^7.7.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.34.0",
		"@stylistic/eslint-plugin": "^5.3.1",
		"@types/node": "^24.3.1",
		"@types/semver": "^7.7.1",
		"eslint": "^9.34.0",
		"globals": "^16.3.0",
		"lint-staged": "^16.1.6",
		"simple-git-hooks": "^2.13.1",
		"tsdown": "^0.14.2",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.42.0",
		"vitest": "^3.2.4"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*.{js,ts}": "pnpm lint:fix"
	}
}
