{
	"name": "relion",
	"version": "0.17.0",
	"description": "Release workflow helper for Node.js projects.",
	"author": "Kh4f <kh4f.dev@gmail.com>",
	"license": "MIT",
	"engines": {
		"node": "^24.9.0"
	},
	"packageManager": "pnpm@10.17.1",
	"repository": "https://github.com/kh4f/relion",
	"bugs": "https://github.com/kh4f/relion/issues",
	"homepage": "https://github.com/kh4f/relion#readme",
	"keywords": [
		"relion",
		"release",
		"release-workflow",
		"release-helper",
		"semantic-release",
		"conventional-changelog",
		"standard-version",
		"commit-and-tag-version"
	],
	"files": [
		"dist",
		"package.json",
		"LICENSE",
		"README.md"
	],
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": "dist/cli.js",
	"scripts": {
		"build": "tsdown",
		"build:watch": "tsdown --watch",
		"build:prod": "tsdown --production",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"test": "vitest run",
		"test:watch": "vitest",
		"release": "pnpm relion",
		"release:github": "pnpm relion --profile github --latest",
		"relion": "tsx scripts/relion-runner",
		"prepare": "simple-git-hooks"
	},
	"dependencies": {
		"cleye": "^1.3.4",
		"handlebars": "^4.7.8",
		"semver": "^7.7.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.36.0",
		"@stylistic/eslint-plugin": "^5.4.0",
		"@types/node": "^24.5.2",
		"@types/semver": "^7.7.1",
		"eslint": "^9.36.0",
		"globals": "^16.4.0",
		"lint-staged": "^16.2.1",
		"simple-git-hooks": "^2.13.1",
		"tsdown": "^0.15.5",
		"tsx": "^4.20.6",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.1",
		"vitest": "^3.2.4"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*.ts": "pnpm lint:fix"
	}
}
